<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Name="ImageStylesRes">

	<Style
		x:Key="Img_Blank_16x16"
		TargetType="Image">
		<Setter
			Property="Width"
			Value="16" />
		<Setter
			Property="Height"
			Value="16" />
	</Style>
	
	<Style
		x:Key="Img_ShieldAlert_16x16"
		TargetType="Image">
		<Setter
			Property="Source"
			Value="/BandyClient;component/Images/Shield%20Alert%2016x16.png" />
		<Setter
			Property="Stretch"
			Value="None" />
	</Style>

	<Style
		x:Key="Img_ShieldX_16x16"
		TargetType="Image">
		<Setter
			Property="Source"
			Value="/BandyClient;component/Images/Shield%20X%2016x16.png" />
		<Setter
			Property="Stretch"
			Value="None" />
	</Style>
	
	<Style
		x:Key="Img_ShieldCheck_16x16"
		TargetType="Image">
		<Setter
			Property="Source"
			Value="/BandyClient;component/Images/Shield%20Check%2016x16.png" />
		<Setter
			Property="Stretch"
			Value="None" />
	</Style>
	
</ResourceDictionary>